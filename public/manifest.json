{
    "manifest_version": 3,
    "name": "Profile Scraper",
    "version": "1.0",
    "description": "Extracts GitHub and LinkedIn user profile data",
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": [
      "https://github.com/*",
      "https://linkedin.com/*",
      "https://www.linkedin.com/*",
      "https://pk.linkedin.com/*",
      "https://www.linkedin.com/jobs/collections/recommended/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "theif.jpg",
        "48": "theif.jpg",
        "128": "theif.jpg"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://github.com/*",
          "https://linkedin.com/*",
          "https://www.linkedin.com/*",
          "https://pk.linkedin.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  