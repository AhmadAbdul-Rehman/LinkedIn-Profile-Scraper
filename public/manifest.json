{
    "manifest_version": 3,
    "name": "LinkedIn Scraper",
    "version": "1.0",
    "description": "Scrape LinkedIn profiles and jobs data",
    "permissions": ["activeTab", "scripting", "tabs", "storage"],
    "host_permissions": [
      "https://linkedin.com/*",
      "https://www.linkedin.com/*",
      "https://pk.linkedin.com/*",
      "https://www.linkedin.com/jobs/collections/recommended/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  